pipeline {
    agent none

    stages {
        stage('Install Ansible on node1') {
            agent {
                label 'node1'
            }
            steps {
                // Install Ansible on node1
                sh 'yum install -y epel-release'
                sh 'yum install -y ansible'
            }
        }

        stage('Run Ansible Playbook on node1') {
            agent {
                label 'node1'
            }
            steps {
                // Copy the Ansible playbook to the node1 agent
                copyArtifacts(projectName: 'ansible-playbook', target: '.')

                // Run the Ansible playbook
                sh 'ansible-playbook playbook.yml'
            }
        }
    }
}
